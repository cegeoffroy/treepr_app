    <div class="col-xs-12 col-md-6">
      <%= simple_form_for @experience do |f| %>


        <div class="form-group">
          <label>Your experience name</label>
          <%= f.text_field :name, label: "Experience Name", autocomplete: 'off', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.input :address, placeholder: "Enter your precise address", hint: "Campers will only get your exact address once theyâ€™ve booked a reservation.", class: "form-control" %>
        </div>
        <br>

        <br>
        <div class="container text-center">
            <%= f.button :submit,"Host Now", class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
