<div class="content">
  <div class="row">

    <div class="container">
      <h2 class="text-center mb-4 justify-contact-center">
        <strong>Log in<span style="color: #E67E22">.</span></strong>
      </h2>
    </div>

    <div class="container">

      <div class="box-centered box">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: "Email address",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-flat w-100" %>
          </div>
        <% end %>

      </div>
    </div>

    <br>

    <div class="container">
      <div class="box-centered box mt-3">

        <span>New to Treepr ? <a href="/users/sign_up">Create an account</a></span>
      </div>
    </div>

  </div>
</div>
